extends layouts/legal/default

block content
  div.container
    div.row
      div.col-sm
        form(method="post" action="/feedback")
          div.form-row
            div.form-group.col-sm
              label First name
              input(type="text" required placeholder="First name" name="firstname").form-control
            div.form-group.col-sm
              label Last name
              input(type="text" required placeholder="Last name" name="lastname").form-control
          div.form-group
            label Email
            input(type="email" required placeholder="Email" name="email").form-control
          div.form-group
            select(required name="subject").form-control
              option(selected value="") Choose an option
              option(value="IOS") IOS
              option(value="Android") Android
              option(value="Web") Web
              option(value="General feedback") General feedback
          div.form-group
            label Message
            textarea(row="5" required name="message").form-control
          div.form-group
            button(type="submit" class="btn btn-primary") Send